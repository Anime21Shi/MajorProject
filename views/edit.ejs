<% layout("layouts/boilerplate") %>

    <div class="row offset-2">
        <div class="col-8">
            <h3 class="mt-3">Edit your Listing</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div>
                    <label for="title" class="form-label">Title : </label>
                    <input type="text" value="<%= listing.title %>" name="listing[title]" id="title" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <br>
                <div>
                    <label for="desc" class="form-label">Description : </label>
                    <textarea rows="4" cols="33" name="listing[description]" id="desc" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short description.</div>
                </div>
                <br>
                <div>
                    Original Listing Image<br>
                    <img src="<%= originalImageUrl %>">
                </div>
                <br>
                <div>
                    <label for="image" class="form-label">Upload New Image : </label>
                    <input type="file" name="listing[image]" id="image" class="form-control">
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Pricing : </label>
                        <input type="number" value="<%= listing.price %>" name="listing[price]" id="price" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid price.</div>
                    </div>
                    <br>
                    <div class="col-md-8">
                        <label for="cont" class="form-label">Country : </label>
                        <input type="text" value="<%= listing.country %>" name="listing[country]" id="cont" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid country name.</div>
                    </div>
                    <br>
                </div>
                <div>
                    <label for="loc" class="form-label">Location : </label>
                    <input type="text" value="<%= listing.location %>" name="listing[location]" id="loc" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid location.</div>
                </div>
                <br><br>
                <button class="btn btn-primary mb-3 edit-btn">
                    Edit
                </button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
